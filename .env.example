# 应用配置
NODE_ENV=production
PORT=5000
FRONTEND_URL=http://localhost:3000

# 数据库配置
MONGODB_URI=mongodb://admin:your_password@mongodb:27017/photo-album?authSource=admin
REDIS_URL=redis://:your_password@redis:6379

# JWT配置
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=7d

# 文件上传配置
MAX_FILE_SIZE=107374182400  # 100GB
CHUNK_SIZE=10485760         # 10MB
UPLOAD_DIR=./uploads

# 缩略图配置
THUMBNAIL_WIDTH=640
THUMBNAIL_HEIGHT=480
THUMBNAIL_QUALITY=85

# 安全配置
RATE_LIMIT_WINDOW=900000    # 15分钟
RATE_LIMIT_MAX=1000
CORS_ORIGIN=http://localhost:3000

# 生产环境（取消注释）
# DOMAIN=yourdomain.com
# HTTPS=true
# SSL_CERT_PATH=/etc/letsencrypt/live/yourdomain.com
